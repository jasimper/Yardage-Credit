<h1>Current Handspun</h1>
<h3>  <%= link_to 'Add new handspun?', new_yarn_path %> </h3>

<div class="table">
  <div class="table__row">
    <div class="table__head">Name/Description</div>
    <div class="table__head">Measured Yardage</div>
    <div class="table__head">Number of Plies</div>
    <div class="table__head">Yardage Credit</div>
    <div class="table__head">Edit Yarn</div>
    <div class="table__head">Delete Yarn</div>
  </div>
  <% @yarns.each do |y| %>
  <div class="table__row">
    <div class="table__cell">
      <%= y.name %>
    </div>
    <div class="table__cell">
      <%= y.plied_yardage %>
    </div>
    <div class="table__cell">
      <%= y.num_of_plies %>
    </div>
    <div class="table__cell">
      <%= y.yardage_credit %>
    </div>
    <div class="table__cell">
      <%= link_to 'Edit', edit_yarn_path(y) %>
    </div>
    <div class="table__cell">
      <%= link_to 'Delete',  y,  method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <% end %>
</div>
<div class="table">
  <h3>Total Spinzilla Yardage: <%= @current_user.total_yardage %></h3>
</div>
